<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.it.mapper.MemberMapper">
	
<!-- ShopMember에서는 리스트를 볼 이유가 X -->	
<!-- 	<select id="getList" resultType="com.it.domain.MemberVO"> 
		select * from tblmember order by m_id 
		limit #{pageAmount} offset ${(pageNum-1)*pageAmount}
	</select>
	
	<select id="getTotalCount" resultType="int">
		select count(m_id) from tblmember
	</select> -->
	
	<insert id="insert"> 
		insert into tblmember (m_id, m_passwd, m_fname, m_lname, m_email) 
		values (#{m_id}, hex(aes_encrypt(#{m_passwd}, sha2('123!',512))), #{m_fname}, #{m_lname}, #{m_email}) 
	</insert>
	
	<select id="read" resultType="com.it.domain.MemberVO"> <!-- 반환받는게 있을때 resultType써준다 -->
		select * from tblmember where m_id = #{m_id}
	</select>
	
	<update id="update">
		update tblmember set m_fname = #{m_fname}, m_lname = #{m_lname}, m_email = #{m_email}, m_udate = sysdate()
		where m_id= #{m_id} 
	</update>
	
	<delete id="delete">
		delete from tblmember where m_id = #{m_id}
	</delete>
	
</mapper>